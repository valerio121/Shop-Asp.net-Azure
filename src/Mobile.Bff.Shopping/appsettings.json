{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System.Net.Http": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "c-short": {
        "ClusterId": "catalog",
        "Match": {
          "Path": "c/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/c" }
        ]
      },
      "c-long": {
        "ClusterId": "catalog",
        "Match": {
          "Path": "catalog-api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/catalog-api" }
        ]
      }
    },
    "Clusters": {
      "catalog": {
        "Destinations": {
          "destination0": {
            "Address": "http://catalog-api"
          }
        }
      }
    }
  }
}
